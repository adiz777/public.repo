{

    "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.color": "#7cb342",

    "editor.fontFamily": "'Rec Mono Casual', 'Fantasque Sans Mono Regular', 'JetBrains Mono Regular', 'mononoki Regular'",
    "editor.fontSize": 14,
    "editor.fontWeight": "300",
    "editor.lineHeight": 20,
    "editor.letterSpacing": 0.5,

    "window.titleBarStyle": "native",
    "window.title": "${dirty}${activeEditorShort}${separator}${folderName}${separator}Code",
    "window.titleSeparator": " - ",
    "editor.wordWrap": "on",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": false,
    "editor.cursorBlinking": "smooth",
    "security.workspace.trust.enabled": false,
    
    "update.mode": "none",
    "explorer.confirmDelete": false,
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    "workbench.preferredDarkColorTheme": "GitHub Dark",
    "workbench.tips.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",

    "notebook.lineNumbers": "on",
    "notebook.compactView": false,
    "notebook.showFoldingControls": "always",
    "notebook.cellToolbarVisibility": "hover",
    "notebook.consolidatedRunButton": true,
    "jupyter.pylanceHandlesNotebooks": true,

    "liveServer.settings.CustomBrowser": "chrome:PrivateMode",
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,

}
